<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:orientation="vertical"
    android:padding="@dimen/margin_small">


    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="@dimen/min_size_small"
            android:layout_height="@dimen/min_size_small"
            android:background="@drawable/ic_tool_1_xml"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="@dimen/min_size_small"
            android:layout_height="@dimen/min_size_small"
            android:background="@drawable/ic_tool_2_xml"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="@dimen/min_size_small"
            android:layout_height="@dimen/min_size_small"
            android:background="@drawable/ic_tool_3_xml"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="@dimen/min_size_small"
            android:layout_height="@dimen/min_size_small"
            android:background="@drawable/ic_tool_4_xml"
            android:button="@null"
            android:visibility="gone"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvSort"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Sort by : "/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/rg"
        android:layout_toRightOf="@id/tvSort"
        android:minHeight="@dimen/min_size_small"/>

</RelativeLayout>

